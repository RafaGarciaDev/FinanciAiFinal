<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="financiai.financiai.controller.ResultPageController"
      styleClass="result-root" spacing="20" alignment="TOP_CENTER">

    <stylesheets>
        <URL value="@/financiai/financiai/css/style.css" />
    </stylesheets>

    <Label styleClass="result-title" text="RESULTADO DA SIMULAÇÃO"/>

    <VBox styleClass="result-summary">
        <Label styleClass="summary-title" text="Resumo do Financiamento"/>

        <GridPane styleClass="summary-grid" prefWidth="700">
            <Label text="Nome do Cliente:" styleClass="summary-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="resumoNomeCliente" styleClass="summary-value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Valor Financiado:" styleClass="summary-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="resumoValorFinanciado" styleClass="summary-value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Parcelas:" styleClass="summary-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="resumoParcelas" styleClass="summary-value" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Valor da Parcela:" styleClass="summary-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="resumoValorParcela" styleClass="summary-value" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Total a Pagar:" styleClass="summary-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="resumoTotalPagar" styleClass="summary-value highlight" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" halignment="RIGHT"/>
                <ColumnConstraints hgrow="NEVER" halignment="LEFT"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
            </rowConstraints>
        </GridPane>
    </VBox>

    <Label styleClass="section-title" text="DETALHAMENTO DAS PARCELAS:"/>

    <TextArea fx:id="tabelaParcelasArea" styleClass="parcelas-text-area" wrapText="true"/>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#gerarPDF" styleClass="export-button" text="Exportar PDF">
            <tooltip>
                <Tooltip text="Gerar relatório em PDF com os detalhes"/>
            </tooltip>
        </Button>
        <Button onAction="#voltar" styleClass="new-simulation-button" text="Nova Simulação"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label fx:id="simulacaoResultLabel" styleClass="status-label"/>
    </HBox>
</VBox>