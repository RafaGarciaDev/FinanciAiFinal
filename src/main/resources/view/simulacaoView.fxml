<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="693.0" prefWidth="774.0" spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="financiai.financiai.controller.ResultPageController">

    <stylesheets>
        <URL value="@/financiai/financiai/css/style.css" />
    </stylesheets>

    <!-- Restante do conteúdo permanece igual -->
    <Label styleClass="titulo-resultado" text="RESULTADO DA SIMULAÇÃO" />

    <!-- Logo -->
    <ImageView fitHeight="41.0" fitWidth="88.0" preserveRatio="true" visible="false">
        <image>
            <Image url="@/images/financiailogo.jpeg" />
        </image>
    </ImageView>

    <HBox alignment="CENTER" spacing="10">
        <Label styleClass="label-destaque" text="Status:" />
        <Label fx:id="simulacaoResultLabel" styleClass="status-label" />
    </HBox>

    <Label prefHeight="63.0" prefWidth="255.0" styleClass="subtitulo" text="DETALHAMENTO DAS PARCELAS:" />

    <TextArea fx:id="tabelaParcelasArea" editable="false" prefHeight="259.0" prefWidth="644.0" styleClass="tabela-parcelas" wrapText="true" />

    <!-- Botões movidos para cima do logo -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#gerarPDF" styleClass="botao-exportar" text="Exportar PDF">
            <tooltip>
                <Tooltip text="Gerar relatório em PDF com os detalhes" />
            </tooltip>
        </Button>

        <Button onAction="#voltar" styleClass="botao-secundario" text="Nova Simulação" />
    </HBox>

    <GridPane hgap="10" styleClass="resumo-container" vgap="10">
        <Label prefHeight="25.0" prefWidth="704.0" styleClass="subtitulo" text="Resumo do Financiamento" GridPane.columnSpan="2" />

        <Label text="Nome do Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="resumoNomeCliente" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Valor Financiado:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="resumoValorFinanciado" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Parcelas:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="resumoParcelas" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Valor da Parcela:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label fx:id="resumoValorParcela" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Total a Pagar:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label fx:id="resumoTotalPagar" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>
</VBox>
